# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application ID (for slash commands)
DISCORD_CLIENT_ID=your_discord_client_id_here

# Guild ID for development (optional - for instant command registration)
# GUILD_ID=your_guild_id_here

# Musa Channel Configuration (optional - if set, Musa will only respond in this channel)
# MUSA_CHANNEL_ID=your_channel_id_here

# Service Configuration
ENABLE_YOUTUBE=false
ENABLE_INTERNET_ARCHIVE=true
ENABLE_RADIO=true

# Service Priorities (lower number = higher priority)
YOUTUBE_PRIORITY=3
INTERNET_ARCHIVE_PRIORITY=2
RADIO_PRIORITY=1

# Search Configuration
MAX_RESULTS_PER_SOURCE=3
SEARCH_TIMEOUT_SECONDS=10

# Music Configuration
MAX_QUEUE_SIZE=100
INACTIVITY_TIMEOUT=60       # Seconds before disconnecting when not playing (1 minute)
EMPTY_CHANNEL_TIMEOUT=120   # Seconds before disconnecting when channel is empty (2 minutes)

# Prefetching (pre-resolve next songs' stream URLs)
PREFETCH_ENABLED=true         # Enable/disable prefetch system
PREFETCH_COUNT=2              # How many upcoming songs to prefetch
PREFETCH_ALL=false          # If true, prefetch entire queue (use with caution)
STREAM_CACHE_TTL_MINUTES=10   # Cache TTL for resolved stream URLs

# Logging Configuration
LOG_LEVEL=INFO

# YouTube Configuration (if enabled)
YTDLP_COOKIES=/cookies/cookies.txt

# YouTube Resolver Configuration (optional - for remote resolver)
RESOLVER_URL=http://localhost:3001

# Bot Prefix (optional)
PREFIX=!
