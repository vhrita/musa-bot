# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Musa Channel Configuration (optional - if set, Musa will only respond in this channel)
# MUSA_CHANNEL_ID=your_channel_id_here

# Service Configuration
ENABLE_YOUTUBE=false
ENABLE_INTERNET_ARCHIVE=true
ENABLE_RADIO=true

# Service Priorities (lower number = higher priority)
YOUTUBE_PRIORITY=3
INTERNET_ARCHIVE_PRIORITY=2
RADIO_PRIORITY=1

# Search Configuration
MAX_RESULTS_PER_SOURCE=3
SEARCH_TIMEOUT_SECONDS=10

# Music Configuration
MAX_QUEUE_SIZE=100
INACTIVITY_TIMEOUT=60       # Seconds before disconnecting when not playing (1 minute)
EMPTY_CHANNEL_TIMEOUT=120   # Seconds before disconnecting when channel is empty (2 minutes)

# Logging Configuration
LOG_LEVEL=INFO

# YouTube Configuration (if enabled)
YTDLP_COOKIES=/cookies/cookies.txt
YTDLP_PROXY=
# YouTube Resolver Configuration
RESOLVER_URL=http://localhost:3001

# Bot Prefix (optional)
PREFIX=!
